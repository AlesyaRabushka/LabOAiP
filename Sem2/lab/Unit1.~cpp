#pragma argsused
struct Student
{
    char name[200];
    int year;
    char group_number[7];
    double phizika;
    double inform;
    double matem;
    double himia;
    double average_number;
};


// создаем запись-------------------------------
void GetInformation()
{   cout << "       Введите количество студентов: " << endl;
    int n;
    cin >> n;
    Student *std = new Student[n];

    ofstream record("zapici.txt");
    if (record)
    {
      record << n << endl;

    for (int i = 0; i < n; i++)
  {
    cout << "ФИО: " << endl;
    cin.ignore(100, '\n');   //пропустит 100 символов, если ранее не будет найден символ \n
    gets(std[i].name);
    record << std[i].name << endl;

    cout << "Год рождения: " << endl;
    cin >> std[i].year;
    record << std[i].year << endl;

    cout << "Номер группы: " << endl;
    cin >> std[i].group_number;
    record << std[i].group_number << endl;

    cout << "Физика: " << endl;
    cin >> std[i].phizika;
    record << std[i].phizika << endl;

    cout << "Информатика: " << endl;
    cin >> std[i].inform;
    record << std[i].inform << endl;

    cout << "Математика: " << endl;
    cin >> std[i].matem;
    record << std[i].matem << endl;

    cout << "Химия: " << endl;
    cin >> std[i].himia;
    record << std[i].himia << endl;

    std[i].average_number = (std[i].inform + std[i].matem + std[i].himia + std[i].phizika) / 4.;
    cout << "Средний балл: " << std[i].average_number << endl;
    record << std[i].average_number << endl;
    record << "--------------------" << endl;
  }
    }
 record.close();
// delete[] std;
}
//------------------------------------------------------------------

// определяем количество студентов------------------
int NumberOfStudents()
{
        ifstream number("zapici.txt");
        int n;
        if(number)
        {
              number >> n;
        }
          number.close();
    return n;
}
//--------------------------------------------------

// добавляем запись-------------------------------------------
void AddInformation()
{   cout << "       Введите количество студентов: " << endl;
    int n;
    cin >> n;
    Student *std;       
    std = new Student[n];

    string number = "";
    int num = NumberOfStudents() + n;

    ofstream record("zapici.txt", ios::app);
    ofstream record_("zapici.txt", ios::in); //для записи в начало файла

       if (record_)
      {
        record_ << num << endl;
         if (record)
         {
    for (int i = 0; i < n; i++)
    {
    cout << "ФИО: " << endl;
    cin.ignore(100, '\n');  //пропустит 100 символов, если ранее не будет найден символ \n
    gets(std[i].name);
    record << std[i].name << endl;

    cout << "Год рождения: " << endl;
    cin >> std[i].year;
    record << std[i].year << endl;

    cout << "Номер группы: " << endl;
    cin >> std[i].group_number;
    record << std[i].group_number << endl;

    cout << "Физика: " << endl;
    cin >> std[i].phizika;
    record << std[i].phizika << endl;

    cout << "Информатика: " << endl;
    cin >> std[i].inform;
    record << std[i].inform << endl;

    cout << "Математика: " << endl;
    cin >> std[i].matem;
    record << std[i].matem << endl;

    cout << "Химия: " << endl;
    cin >> std[i].himia;
    record << std[i].himia << endl;

    std[i].average_number = (std[i].inform + std[i].matem + std[i].himia + std[i].phizika) / 4.;
    cout << "Средний балл: " << std[i].average_number << endl;
    record << std[i].average_number << endl;
    record << "--------------------" << endl;
    }
  }
  }
 record_.close();
 record.close();
// delete[] std;
}
//--------------------------------------------------------------



 // чтение из файла ------------------------------------------------------------
 void ReadInformation()
 {
        ifstream reading("zapici.txt");

        if (reading) //если открыт файл
        {       string name = "";
                string year = "";
                string group = "";
                string phizika = "";
                string inform = "";
                string matem = "";
                string himia = "";
                string sr_ball = "";
                string stroka = "";
                string str;
                int n;
                reading >> n;
                getline(reading, str);  //просто строка, никуда не нужна
         cout << "      Информация: " << endl;
         cout << "Общее количество студентов: " << n << endl;

                for (int i = 0; i < n; i++)
                {
                      getline(reading, name);
                      cout << "ФИО: " << name << endl;

                        getline(reading, year);
                        cout << "Год рождения: " << year << endl;

                        getline(reading, group);
                        cout << "Номер группы: " << group << endl;

                        getline(reading, phizika);
                        cout << "Физика: " << phizika << endl;

                        getline(reading, inform);
                        cout << "Информатика: " << inform << endl;

                        getline(reading, matem);
                        cout << "Математика: " << matem << endl;

                        getline(reading, himia);
                        cout << "Химия: " << himia << endl;

                        getline(reading, sr_ball);
                        cout << "Средний балл: " << sr_ball << endl;

                        getline(reading, stroka);
                        cout << stroka << endl;
                }
        }
        reading.close();
 }
 // --------------------------------------------------

 //копируем данные-----------------------------------
 void Copy()
 {
        ifstream reading("zapici.txt"); //поток для чтения
        ofstream record("newzapici.txt"); //поток для записи новых данных

        if (reading)
        {       if(record)
                {
                string name = "";
                string year = "";
                string group = "";
                string phizika = "";
                string inform = "";
                string matem = "";
                string himia = "";
                string sr_ball = "";
                string stroka= "";
                string str;
                int n;
                reading >> n;

                      record << n << endl;
                      getline(reading, str); //просто пустая строка
                for (int i = 0; i < n; i++)
                {
                        getline(reading, name);
                        record << name << endl;

                        getline(reading, year);
                        record << year << endl;

                        getline(reading, group);
                        record << group << endl;

                        getline(reading, phizika);
                        record << phizika << endl;

                        getline(reading, inform);
                        record << inform << endl;

                        getline(reading, matem);
                        record << matem << endl;

                        getline(reading, himia);
                        record << himia << endl;

                        getline(reading, sr_ball);
                        record << sr_ball << endl;

                        getline(reading, stroka);
                        record << stroka << endl;
                }
                }
        }
        reading.close();
        record.close();
 }
 //--------------------------------------------------

 //изменение данных--------------------------------
 void Change()
 {
        Copy();

        ifstream reading("newzapici.txt");
        ofstream record("zapici.txt", ios::out);

        if (reading)
        {
            if (record)
              { string name = "";
                string year = "";
                string group = "";
                string phizika = "";
                string inform = "";
                string matem = "";
                string himia = "";
                string sr_ball = "";
                string stroka= "";
                        int n, k;
                        reading >> n;

                        cout << "       Введите номер записи, которую хотите изменить: " << endl;
                        cin >> k;
                        k--;

                        record << n << endl;
                        getline(reading, stroka);
                        if (k >= 0 && k < n)
                        {
                          for (int i = 0; i < n; i++)
                              {
                                if (i != k)
                                    {
                        getline(reading, name);
                        record << name << endl;

                        getline(reading, year);
                        record << year << endl;

                        getline(reading, group);
                        record << group << endl;

                        getline(reading, phizika);
                        record << phizika << endl;

                        getline(reading, inform);
                        record << inform << endl;

                        getline(reading, matem);
                        record << matem << endl;

                        getline(reading, himia);
                        record << himia << endl;

                        getline(reading, sr_ball);
                        record << sr_ball << endl;

                        getline(reading, stroka);
                        record << stroka << endl;
                                    }
                         else {
    Student* std = new Student[n];

    cout << "ФИО: " << endl;
    cin.ignore(100, '\n');  //пропустит 100 символов, если ранее не будет найден символ \n
    gets(std[i].name);
    record << std[i].name << endl;

    cout << "Год рождения: " << endl;
    cin >> std[i].year;
    record << std[i].year << endl;

    cout << "Номер группы: " << endl;
    cin >> std[i].group_number;
    record << std[i].group_number << endl;

    cout << "Физика: " << endl;
    cin >> std[i].phizika;
    record << std[i].phizika << endl;

    cout << "Информатика: " << endl;
    cin >> std[i].inform;
    record << std[i].inform << endl;

    cout << "Математика: " << endl;
    cin >> std[i].matem;
    record << std[i].matem << endl;

    cout << "Химия: " << endl;
    cin >> std[i].himia;
    record << std[i].himia << endl;

    std[i].average_number = (std[i].inform + std[i].matem + std[i].himia + std[i].phizika) / 4.;
    cout << "Средний балл: " << std[i].average_number << endl;
    record << std[i].average_number << endl;
    record << "--------------------" << endl;

    //у нас в файле есть указатели, которые показывают на опредеенные места и их
    //надо сместить
    //считываем те данные, которые хотим заменить
    getline(reading, name);
    getline(reading, year);
    getline(reading, group);
    getline(reading, phizika);
    getline(reading, inform);
    getline(reading, matem);
    getline(reading, himia);
    getline(reading, sr_ball);
    getline(reading, stroka);
                              }
                              }
                        }
              }
        }

        reading.close();
        record.close();

        remove("newzapici.txt");
 }
 //-----------------------------------------------------------------------------

 //удалить запись---------------------------------------------------------------
void Delete()
{        Copy();

        ifstream reading("newzapici.txt");
        ofstream record("zapici.txt", ios::out);

        if (reading)
        { if (record)
              { string name = "";
                string year = "";
                string group = "";
                string phizika = "";
                string inform = "";
                string matem = "";
                string himia = "";
                string sr_ball = "";
                string stroka= "";
                        int n, k;
                        reading >> n;
                        int b = n - 1;

                cout << "       Введите номер записи, которую хотите изменить: " << endl;
                cin >> k;
                k--;

                        record << b << endl;
                        getline(reading, stroka);
                        if (k >= 0 && k < n)
                        {
                          for (int i = 0; i < n; i++)
                            {
                                if (i != k)
                                {
                        getline(reading, name);
                        record << name << endl;

                        getline(reading, year);
                        record << year << endl;

                        getline(reading, group);
                        record << group << endl;

                        getline(reading, phizika);
                        record << phizika << endl;

                        getline(reading, inform);
                        record << inform << endl;

                        getline(reading, matem);
                        record << matem << endl;

                        getline(reading, himia);
                        record << himia << endl;

                        getline(reading, sr_ball);
                        record << sr_ball << endl;

                        getline(reading, stroka);
                        record << stroka << endl;
                                    }
                         else {
    //у нас в файле есть указатели, которые показывают на опредеенные места и их
    //надо сместить
    //считываем инфу о студенте, чью запись удаляем
    getline(reading, name);
    getline(reading, year);
    getline(reading, group);
    getline(reading, phizika);
    getline(reading, inform);
    getline(reading, matem);
    getline(reading, himia);
    getline(reading, sr_ball);
    getline(reading, stroka);
                                }
                            }
                        }
              }
        }

        reading.close();
        record.close();

        remove("newzapici.txt");
}
 //-----------------------------------------------------------------------------

 //общий средний балл-----------------------------------------------------------
  void AverageBall()
  {
        double srball, Balls = 0, A_ball = 0;
        ifstream reading("zapici.txt");
        ofstream record("ball.txt");

        if (reading)
        {       if (record)
                {
                string name = "";
                string year = "";
                string group = "";
                string phizika = "";
                string inform = "";
                string matem = "";
                string himia = "";
                string sr_ball = "";
                string stroka= "";
                string str;
                int n, number;


                reading >> n;
                for(int i = 0; i < n; i++)
                {       getline(reading, str);
                        getline(reading, name);
                        getline(reading, year);
                        getline(reading, group);
                        getline(reading, phizika);
                        getline(reading, inform);
                        getline(reading, matem);
                        getline(reading, himia);
                        reading >> srball;
                        Balls += srball;
                        getline(reading, stroka);
                }
               A_ball = Balls / n;
               record << A_ball;
              }
        }
  }
 //-----------------------------------------------------------------------------

 //поиск студентов из одной группы----------------------------------------------
  void Search()
  {
        ifstream reading("zapici.txt");
        ofstream record("search.txt");
        ifstream reading_("ball.txt");
        ofstream number("group.txt");
        ofstream counting("count.txt");
        cout << "       Введите номер интересующей вас группы: " << endl;
        string s;
        getline(cin, s);
        number << s << endl;

        if (reading)
        {       if (record)
                {
                if (reading_)
                {
                string name = "";
                string year = "";
                string group = "";
                string phizika = "";
                string inform = "";
                string matem = "";
                string himia = "";
                string sr_ball = "";
                string stroka= "";
                string str;
                int n, count = 0;
                double ball;
                reading >> n;
                reading_ >> ball;
                cout << "     Общий средний балл всех студентов: " << ball << endl;
                cout << "Студенты из группы " << s << ", у которых средний балл выше общего среднего балла:" << endl;
                getline(reading, str);    //просто строка с количеством студентов

                for(int i = 0; i < n; i++)
                {
                        getline(reading, name);
                        getline(reading, year);
                        getline(reading, group);
                        getline(reading, phizika);
                        getline(reading, inform);
                        getline(reading, matem);
                        getline(reading, himia);
                        getline(reading, sr_ball);
                        getline(reading, stroka);
                        if (s == group)
                        {
                                record << name << endl;
                                record << year << endl;
                                record << group << endl;
                                record << phizika << endl;
                                record << inform << endl;
                                record << matem << endl;
                                record << himia << endl;
                                record << sr_ball << endl;
                                record << stroka << endl;
                                count++;
                        }
                }  counting << count;
                }
                }
        }
        reading.close();
        record.close();
        reading_.close();
        number.close();
  }
 //-----------------------------------------------------------------------------

 //ищем средний балл выше общего среднего---------------------------------------
 void Ball()
 {      ifstream read("zapici.txt");
        ifstream reading_("ball.txt");
        ifstream reading("search.txt");
        ofstream record("7.txt");
        ofstream record_("cash.txt");
        ifstream number("group.txt");
        ifstream counting("count.txt");

        if (reading)
        {       if(record)
                {
                if(reading_)
                {
                if (record_)
                {
                string name = "";
                string year = "";
                string group = "";
                string phizika = "";
                string inform = "";
                string matem = "";
                string himia = "";
                string sr_ball = "";
                string stroka= "";
                string str;
                string s;
                int n, count;
                double ball, srball;
                read >> n;
                reading_ >> ball;
                record << "     Общий средний балл всех студентов: " << ball << endl;
                getline(number, s);
                counting >> count;
                for(int i = 0; i < count; i++)
                {
                        getline(reading, name);
                        getline(reading, year);
                        getline(reading, group);
                        getline(reading, phizika);
                        getline(reading, inform);
                        getline(reading, matem);
                        getline(reading, himia);
                        reading >> srball;
                        getline(reading, str);
                        getline(reading, stroka);
                        if(srball > ball)
                        {
                                record << "ФИО: " << name << endl;
                                cout << "ФИО: " << name << endl;
                                record << "Год рождения: " << year << endl;
                                cout << "Год рождения: " << year << endl;
                                record << "Номер группы: " << group << endl;
                                cout << "Номер группы: " << group << endl;
                                record << "Физика: " << phizika << endl;
                                cout << "Физика: " << phizika << endl;
                                record << "Информатика: " << inform << endl;
                                cout << "Информатика: " << inform << endl;
                                record << "Математика: " << matem << endl;
                                cout << "Математика: " << matem << endl;
                                record << "Химия: " << himia << endl;
                                cout << "Химия: " << himia << endl;
                                record << "Средний балл: " << srball << endl;
                                cout << "Средний балл: " << srball << endl;
                                record << stroka << endl;
                                cout << stroka << endl;
                        }     else
                        {
                                record_ << name;
                                record_  << year;
                                record_ << group;
                                record_ << phizika;
                                record_ << inform;
                                record_ << matem;
                                record_ << himia;
                                record_ << srball;
                                record_ << stroka;
                        }
                }
                }
                }
                }
        }
        read.close();
        reading.close();
        record.close();
        reading_.close();
        record_.close();
 }
 //-----------------------------------------------------------------------------

 //занесение результатов в файл-------------------------------------------------
  void Save()
 {
        ifstream reading("7.txt");  //в зависимости от выполнения индивидуального задания
        ofstream record("spiski.txt");
        ifstream number("group.txt");
        string s;
        if(number)
        {
                getline(number, s);
        }

        if (reading)
        {       if(record)
                {
                int n;

                string str ="";
        record << "Студенты из группы " << s << ", у которых средний балл выше общего среднего балла:" << endl;
                while(!reading.eof())
                {
                        getline(reading, str);
                        record << str << endl;
                }
                }
        }
        reading.close();
        record.close();
        number.close();
        remove("ball.txt");
        remove("7.txt");
        remove("cash.txt");
        remove("zapici.txt");
        remove("count.txt");
        remove("group.txt");
        remove("search.txt");
 }
 //-----------------------------------------------------------------------------

int main(int argc, char* argv[])
{
        // русификация---------------------
        setlocale(LC_ALL, "Russian");
        SetConsoleCP(1251);
        SetConsoleOutputCP(1251);
        // --------------------------------

    int n, s;
   // setlocale(0, "");
    while (true)
    {   cout << "      Выберите действие:" << endl;
        cout << "       Создать запись - 1" << endl << "       Просмотр - 2" << endl
            << "       Добавить запись - 3" << endl << "       Изменить запись - 4" << endl
            << "       Удалить запись - 5" << endl << "       Индивидуальное задание - 6" << endl
            << "       Занесение результатов в файл - 7" << endl
            << "       Выход - 0" << endl;

        cin >> s;
        switch (s)
        {

        case 1:        //создаем запись
        system("cls"); //чистим консоль от записей
            GetInformation();
            break;


        case 2:        //выводим данные из файла
         system("cls"); //чистим консоль от записей
               ReadInformation();
               break;


        case 3:    //добавляем данные
        system("cls");
            AddInformation();
            break;


        case 4:      //изменение записи
        system("cls");
        Change();
            break;


        case 5:    //удаляем данные
        system("cls");
        Delete();
            break;

        case 6:  //индивидуальное задание
        system("cls");
        AverageBall();
        Search();
        Ball();
        break;

        case 7:  //занесение в файл
        system("cls");
        Save();
        break;
        }
       if (s == 0)
            break;
    }


        getch();
        return 0;
}
